<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('include/include', { title: 'DRUNKEN HIGH' })%>
    <link rel="stylesheet" href="/public/css/main.css">
</head>
<body>
    <%- include('./partials/cookie.ejs') %>
    <%- include('./partials/header.ejs') %>
    <main>
        <section class="main__recommend">
            <h2 class="recommend-title"></h2>
            <div class="recommend-container">
              <!-- first swiper -->
              <div class="recommend-firstSwiper">
                <ul class="">
                  <li>
                    <a href="/">
                      <figure>
                        <!-- <img src="./test/1.jpg" alt="하이볼" class="recommed__img" /> -->
                        <figcaption class="recommend__text">
                          <p class="receipe__title"></p>
                          <p class="receipe__writer"></p>
                        </figcaption>
                      </figure>
                    </a>
                  </li>
                </ul>
              </div>
              <!-- second swiper -->
              <div class="recommend-secondSwiper">
                <ul class="">
                  <li>
                    <a href="/">
                      <figure>
                        <!-- <img src="./test/1.jpg" alt="하이볼" class="recommed__img" /> -->
                        <figcaption class="recommend__text">
                          <p class="receipe__title"></p>
                          <p class="receipe__writer"></p>
                        </figcaption>
                      </figure>
                    </a>
                  </li>
                </ul>
              </div>
              <!-- third swiper -->
              <div class="recommend-thirdSwiper">
                <ul class="">
                  <li>
                    <a href="/">
                      <figure>
                        <!-- <img src="./test/1.jpg" alt="하이볼" class="recommed__img" /> -->
                        <figcaption class="recommend__text">
                          <p class="receipe__title"></p>
                          <p class="receipe__writer"></p>
                        </figcaption>
                      </figure>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </section>
          <section class="main__list">
            <h2 class="list-title">레시피 모음</h2>
            <nav class="recipe-category">
              <ul class="category-btn">   
              </ul>
            </nav>
            <div class="recipe-list__container">
              <ul class="recipe-lists">
                <% recipeLists.forEach(recipe => { %>
                    <li>
                        <a href="/recipes?recipe_id=<%= recipe.dataValues.recipe_num%>">
                            <figure>
                            <img src="<%= recipe.dataValues.recipe_img %>" alt="레시피이미지" class="recipe-list__img" />          
                            </figure>
                            <p class="receipe__title"><%= recipe.dataValues.title %></p>
                            <p class="receipe__writer"><%= recipe.dataValues.user_name %></p>
                        </a>
                    </li>
                <%})%> 
              </ul>
            </div>
            <div class="recipe-morebtn">
                <button>더보기</button>
            </div>
          </section>
    </main>
    <%- include('./partials/footer.ejs') %>
    <script src="/public/js/cookie.js"></script>
    <script src="/public/js/main.js"></script>
</body>
</html>